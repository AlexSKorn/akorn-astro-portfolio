---
import { ITechnicalSkills } from "@types";

const { title, skills } = Astro.props as ITechnicalSkills;
---

<section
  class="flex items-start justify-between flex-col lg:flex-row dark:text-light my-16"
>
  <h2 class="w-full lg:w-[15rem] mb-8 lg:mb-0 lg:mt-16 text-2xl">{title}</h2>
  <div class="w-full lg:flex-1">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        skills.map((item) => (
          <div class="bg-white/50 dark:bg-dark-gray/50 rounded-xl p-6 border border-gray-200 dark:border-gray-700 hover:border-blue/30 dark:hover:border-blue/40 transition-all duration-300 hover:shadow-lg backdrop-blur-sm">
            <div class="flex items-center mb-4">
              <div class="w-3 h-3 bg-blue rounded-full mr-3"></div>
              <h3 class="text-lg font-semibold text-dark dark:text-light font-outfit">{item.title}</h3>
            </div>
            <div class="flex flex-wrap gap-2">
              {item.skills.split(', ').map((skill) => (
                <span class="px-3 py-1.5 bg-blue/10 dark:bg-blue/20 text-blue dark:text-blue-300 text-sm font-medium rounded-full border border-blue/20 hover:bg-blue/20 dark:hover:bg-blue/30 transition-colors">
                  {skill.trim()}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
