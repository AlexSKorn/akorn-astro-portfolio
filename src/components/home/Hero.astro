---
import { IHeroProps } from "@types";

const { name, about } = Astro.props as IHeroProps;
---

<section class="pt-8 sm:pt-16 pb-4 sm:pb-8">
  <div class="flex flex-col items-start">
    <p class="dark:text-light text-lg sm:text-xl mb-4 opacity-90">Hey, I'm</p>
    <h1 class="mb-6">{name}</h1>
    
    <!-- Job Title Badge -->
    <div class="inline-flex items-center px-4 py-2 rounded-full bg-blue/10 dark:bg-blue/20 border border-blue/30 mb-6">
      <span class="w-2 h-2 bg-blue rounded-full mr-3 animate-pulse"></span>
      <span class="text-blue dark:text-blue-300 font-medium text-sm">Available for new opportunities</span>
    </div>
    
    <p class="dark:text-light text-lg mb-8 leading-relaxed max-w-4xl">
      {about}
    </p>
  </div>
</section>
