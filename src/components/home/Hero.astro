---
import { IHeroProps } from "@types";
import { info } from "@data";

const { name, about } = Astro.props as IHeroProps;
---

<section class="pt-8 sm:pt-16 pb-8 sm:pb-16">
	<div
		class="flex flex-col lg:flex-row items-start justify-between gap-12 mb-12"
	>
		<!-- Left Content -->
		<div class="flex flex-col items-start flex-1">
			<div
				class="inline-flex items-center px-3 py-1 rounded-full bg-green-100 dark:bg-green-900/30 border border-green-300 dark:border-green-700 mb-4"
			>
				<span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"
				></span>
				<span class="text-green-700 dark:text-green-300 font-medium text-sm"
					>Available for new opportunities</span
				>
			</div>

			<p class="text-gray-700 dark:text-gray-300 text-lg sm:text-xl mb-4">
				Hey, I'm
			</p>
			<h1
				class="mb-6 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
			>
				{name}
			</h1>

			<h2
				class="text-2xl sm:text-3xl font-semibold text-gray-800 dark:text-gray-100 mb-6 font-outfit"
			>
				{info.jobDescription}
			</h2>

			<!-- CTA Buttons -->
			<div class="flex flex-wrap gap-4">
				<a
					href="#projects"
					class="inline-flex items-center px-6 py-3 bg-blue-500 hover:bg-blue-600 dark:bg-blue-600 dark:hover:bg-blue-700 text-white rounded-lg font-medium transition-colors"
				>
					View My Work
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="16"
						height="16"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="ml-2"
					>
						<path d="M7 17 17 7"></path>
						<path d="m17 7-10 0"></path>
						<path d="m17 7 0 10"></path>
					</svg>
				</a>
				<a
					href="#contact"
					class="inline-flex items-center px-6 py-3 border-2 border-blue-500 hover:bg-blue-500 hover:text-white dark:border-blue-400 dark:hover:bg-blue-600 text-blue-600 dark:text-blue-400 rounded-lg font-medium transition-colors"
				>
					Get In Touch
				</a>
			</div>
		</div>
	</div>
</section>

<!-- Full-width description -->
<div class="w-full">
	<p class="text-gray-700 dark:text-gray-300 text-lg leading-relaxed max-w-5xl">
		{about}
	</p>
</div>
