---
import { IExperiences } from "@types";

const { title, details } = Astro.props as IExperiences;
---

<section
  class="flex items-start justify-between flex-col lg:flex-row dark:text-light my-16"
>
  <h2 class="w-full lg:w-[15rem] mb-8 lg:mb-0 lg:mt-16 text-2xl">{title}</h2>
  <div class="w-full lg:flex-1">
    {
      details.map((item, index) => (
        <div class="relative mb-12 last:mb-0">
          {/* Timeline connector */}
          {index !== details.length - 1 && (
            <div class="absolute left-0 top-20 w-px h-16 bg-gradient-to-b from-blue/50 to-transparent hidden sm:block" />
          )}
          
          <div class="relative bg-white/50 dark:bg-dark-gray/50 rounded-xl p-6 border border-gray-200 dark:border-gray-700 hover:border-blue/30 dark:hover:border-blue/40 transition-all duration-300 hover:shadow-lg backdrop-blur-sm">
            {/* Timeline dot */}
            <div class="absolute -left-2 top-8 w-4 h-4 bg-blue rounded-full border-4 border-white dark:border-dark shadow-lg hidden sm:block" />
            
            <div class="flex justify-between items-start flex-col sm:flex-row gap-2 mb-4">
              <div>
                <h3 class="text-xl font-semibold text-dark dark:text-light font-outfit">
                  {item.name}
                </h3>
                <p class="text-blue dark:text-blue-300 font-medium mt-1">
                  {item.location}
                </p>
              </div>
              <div class="flex items-center bg-blue/10 dark:bg-blue/20 px-3 py-1 rounded-full border border-blue/30">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="14"
                  height="14"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="mr-2 text-blue"
                >
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                  <line x1="16" y1="2" x2="16" y2="6"/>
                  <line x1="8" y1="2" x2="8" y2="6"/>
                  <line x1="3" y1="10" x2="21" y2="10"/>
                </svg>
                <span class="text-sm text-blue dark:text-blue-300 font-medium whitespace-nowrap">
                  {item.startDate} - {item.endDate}
                </span>
              </div>
            </div>
            
            <ul class="space-y-3">
              {item.description.map((desc) => (
                <li class="text-gray-700 dark:text-gray-300 flex items-start leading-relaxed">
                  <span class="text-blue mr-3 mt-1.5 font-bold text-sm">â–¸</span>
                  <span class="flex-1">{desc.replace(/^-\s*/, '')}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))
    }
  </div>
</section>
