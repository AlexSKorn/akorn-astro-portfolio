---
import type { ITechnologies } from "@types";

const { title, technologies } = Astro.props as ITechnologies;
---

<section class="mb-4" aria-labelledby="technologies-title">
  <h2 id="technologies-title" class="w-[15rem] dark:text-light mt-8">{title}</h2>
  <div 
    class="flex flex-wrap gap-4 mt-4" 
    role="list"
    aria-label="Technology stack"
  >
    {
      technologies.map((tech) => (
        <div 
          class="flex items-center p-1" 
          role="listitem"
          aria-label={tech.name}
        >
          <i 
            class={`text-5xl ${tech.icon} dark:text-white text-black`}
            aria-hidden="true"
          />
          <span class="sr-only">{tech.name}</span>
        </div>
      ))
    }
  </div>
</section>