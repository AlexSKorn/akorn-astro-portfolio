---
import { IProjects } from "@types";
import ProjectCard from "./ProjectCard.astro";

const { projects } = Astro.props as IProjects;
---

<div
	class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-6 my-6"
	role="list"
>
	{projects.map((project, index) => <ProjectCard projectDetail={project} index={index} />)}
</div>
