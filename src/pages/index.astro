---
import { info } from "@data";

import Layout from "@layouts/Layout.astro";
import Hero from "@components/home/Hero.astro";
import About from "@components/home/About.astro";
import Experience from "@components/home/Experience.astro";
import TechnicalSkills from "@components/home/TechnicalSkills.astro";
import ProjectsWrapper from "@components/general/ProjectsWrapper.astro";
import Contact from "@components/home/Contact.astro";
import MetaHead from "@components/general/MetaHead.astro";
import Technologies from "@components/home/Technologies.astro";

const featureProjects = info.projects.reduce((accumulator, project) => {
	if (accumulator.length < 6 && project.isFeatured) {
		accumulator.push(project);
	}
	return accumulator;
}, []);
---

<Layout>
	<Fragment slot="head">
		<MetaHead
			title={"Senior Full-Stack Software Engineer | TypeScript, Go, AWS, React"}
			description={"Senior Software Engineer with 7+ years experience in high-performance distributed systems, cloud development, and full-stack solutions. Currently at Okta, specializing in TypeScript, Go, React, AWS, and Kubernetes."}
			ogImageUrl={"/assets/images/astro-portfolio.png"}
		/>
	</Fragment>

	<Hero name={info.name} about={info.about} />

	<About />

	<!-- Featured Projects Section -->
	<section id="projects" class="my-10" aria-labelledby="projects-title">
		<div class="flex items-center mb-6">
			<div class="w-1 h-8 bg-blue-500 dark:bg-blue-400 mr-4"></div>
			<h2
				id="projects-title"
				class="text-2xl font-semibold text-gray-800 dark:text-gray-100"
			>
				FEATURED PROJECTS
			</h2>
		</div>
		<ProjectsWrapper projects={featureProjects} />
	</section>

	<section id="experience" aria-labelledby="experience-title">
		<Experience title={"EXPERIENCE"} details={info.experience} />
	</section>
	<Technologies title={"TECHNOLOGIES"} technologies={info.technologies} />
	<TechnicalSkills title={"CERTIFICATIONS"} skills={info.skills} />
	<Experience title={"EDUCATION"} details={info.education} />

	<Contact />
</Layout>
