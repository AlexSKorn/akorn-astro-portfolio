---
import { info } from "@data";

import Layout from "@layouts/Layout.astro";
import Hero from "@components/home/Hero.astro";
import Experience from "@components/home/Experience.astro";
import TechnicalSkills from "@components/home/TechnicalSkills.astro";
import ProjectsWrapper from "@components/general/ProjectsWrapper.astro";
import MetaHead from "@components/general/MetaHead.astro";
import Technologies from "@components/home/Technologies.astro";

const featureProjects = info.projects.reduce((accumulator, project) => {
  if (accumulator.length < 6 && project.isFeatured) {
    accumulator.push(project);
  }
  return accumulator;
}, []);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MetaHead
      title={"Portfolio"}
      description={info.about}
      ogImageUrl={"/assets/images/profile.png"}
    />
  </head>

  <body>
    <Layout>
      <Hero name={info.name} about={info.about} />
      
      <!-- Featured Projects Section -->
      <section class="my-8">
        <div class="flex items-center mb-8">
          <div class="w-1 h-8 bg-blue mr-4"></div>
          <h2 class="text-2xl font-semibold dark:text-light">FEATURED PROJECTS</h2>
        </div>
        <ProjectsWrapper projects={featureProjects} />
      </section>

      <Technologies title={"TECHNOLOGIES"} technologies={info.technologies} />
      <Experience title={"EXPERIENCE"} details={info.experience} />
      <TechnicalSkills title={"TECHNICAL SKILLS"} skills={info.skills} />
      <Experience title={"EDUCATION"} details={info.education} />
      
      <!-- Contact Section -->
      <section class="my-16 py-16 bg-gradient-to-br from-blue/5 to-purple-500/5 dark:from-blue/10 dark:to-purple-500/10 rounded-2xl border border-blue/20 dark:border-blue/30">
        <div class="text-center max-w-3xl mx-auto px-8">
          <div class="flex items-center justify-center mb-6">
            <div class="w-1 h-8 bg-blue mr-4"></div>
            <h2 class="text-2xl font-semibold dark:text-light">LET'S WORK TOGETHER</h2>
          </div>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
            I'm always interested in new opportunities and exciting projects. 
            Whether you're looking for a senior engineer or want to discuss potential collaborations, 
            I'd love to hear from you.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a
              href="mailto:alexkorn1122@gmail.com"
              class="inline-flex items-center justify-center px-8 py-4 bg-blue hover:bg-blue/90 text-white font-medium rounded-lg transition-all duration-300 hover:shadow-lg hover:scale-105 group"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="mr-3"
              >
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
              Send Me an Email
            </a>
            <a
              href="https://www.linkedin.com/in/alex-korn-97510a11b/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-8 py-4 border-2 border-blue text-blue dark:text-blue-300 hover:bg-blue hover:text-white font-medium rounded-lg transition-all duration-300 hover:shadow-lg"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="mr-3"
              >
                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                <rect x="2" y="9" width="4" height="12"/>
                <circle cx="4" cy="4" r="2"/>
              </svg>
              Connect on LinkedIn
            </a>
          </div>
        </div>
      </section>
    </Layout>
  </body>
</html>
